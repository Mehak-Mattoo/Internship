/* kadane algorithm */
public class HelloWorld{

     public static void main(String []args){
        int arr[] = {-1,-2,-3,-4};
        int maxSoFar= arr[0]; 
        int sum=0;
        
        for(int i=0; i<arr.length;i++){
       sum=sum+arr[i];
       maxSoFar= Math.max(maxSoFar, sum);
       if(sum<0){
           sum=0;
       }
        
        }System.out.println(maxSoFar);
     }
}


