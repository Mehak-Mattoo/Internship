class Solution {
    public boolean isSameTree(TreeNode p, TreeNode q) {
        
        if(p== null && q== null){ // if both tree are empty, then they are same
            return true; }
            if(p!= null && q != null){// if both are not null, check their data on left and right nodes
		
 return ( p.val== q.val && isSameTree(p.left, q.left)&& isSameTree(p.right, q.right));  }

       return false;   // if any one of them becomes null, then they are not identical       
    }
}
